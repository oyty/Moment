<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mBaseAction"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x160"
    android:background="@color/white">

    <ProgressBar
        android:id="@+id/mProgressBar"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/x50"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/bid_4523a0"
        android:visibility="gone" />

    <TextView
        android:id="@+id/mAddAddressAction"
        android:layout_width="@dimen/x235"
        android:layout_height="@dimen/x60"
        android:background="@drawable/public_round_border_blue_selector"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="添加地址"
        android:textColor="@color/flash_red"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/mAddressLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        android:visibility="visible">

        <ImageView
            android:id="@+id/mArrowImg"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/arrow_right" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x20"
            android:src="@mipmap/location"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x90"
            android:layout_marginRight="@dimen/x60"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/mNicknameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/x300"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/flash_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/mMobileLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:textColor="@color/flash_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/mDefaultView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:paddingTop="@dimen/x5"
                    android:paddingBottom="@dimen/x5"
                    android:paddingLeft="@dimen/x15"
                    android:paddingRight="@dimen/x15"
                    android:enabled="false"
                    android:text="默认"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/mDetailAddressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/flash_normal"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/mBaseLineView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true" />

</RelativeLayout>