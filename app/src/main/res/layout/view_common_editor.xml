<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/sub"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x60"
        android:gravity="center"
        android:padding="@dimen/x18"
        android:src="@mipmap/minus" />

    <EditText
        android:id="@+id/et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="1dp"
        android:layout_toRightOf="@+id/sub"
        android:layout_weight="1"
        android:background="@drawable/bg_my_et"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:maxWidth="@dimen/x200"
        android:maxLength="9"
        android:minWidth="@dimen/x90"
        android:paddingTop="@dimen/x10"
        android:paddingBottom="@dimen/x10"
        android:selectAllOnFocus="true"
        android:text="1"
        android:textColor="@color/flash_black"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/add"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x60"
        android:layout_toRightOf="@+id/et"
        android:gravity="center"
        android:padding="@dimen/x18"
        android:src="@mipmap/plus" />

</RelativeLayout>