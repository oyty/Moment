<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/mBaseAction">

    <RelativeLayout
        android:id="@+id/mTopView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80">

        <TextView
            android:id="@+id/mTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:text="2019.01.01 11:23"
            android:textColor="@color/flash_normal"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mStateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:text="待支付定金"
            android:textColor="@color/flash_red"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mProductImg"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x160"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:scaleType="centerCrop"
            android:src="@mipmap/zhouxingchi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/x20">


                <LinearLayout
                    android:id="@+id/mPriceView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mCurrentPriceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥209.00"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/mPriceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x5"
                        android:text="￥209.00"
                        android:textColor="@color/flash_normal"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/mTitleLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_toLeftOf="@+id/mPriceView"
                    android:lines="2"
                    android:text="十步杀一人，千里不留行，事了拂衣去，深藏功与名"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/mSkuLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:text="A级礼盒装，1件"
                android:textColor="@color/flash_normal"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mTagLabel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/public_round_light_red_bg"
                    android:paddingLeft="@dimen/x5"
                    android:paddingTop="@dimen/x2"
                    android:paddingRight="@dimen/x5"
                    android:paddingBottom="@dimen/x2"
                    android:text="90天发货"
                    android:textColor="@color/flash_red"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/mTagLabel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/public_round_light_red_bg"
                    android:paddingLeft="@dimen/x5"
                    android:paddingTop="@dimen/x2"
                    android:paddingRight="@dimen/x5"
                    android:paddingBottom="@dimen/x2"
                    android:text="时光减免￥90"
                    android:layout_marginLeft="@dimen/x20"
                    android:textColor="@color/flash_red"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/mPlanLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#FCAA0B"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginTop="@dimen/x15"
                android:text="定金支付后90天内发货"/>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/flash_light"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"/>

    <LinearLayout
        android:id="@+id/mBottomView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:gravity="center_vertical|right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/public_border_black"
            android:text="取消订单"
            android:paddingTop="@dimen/x8"
            android:paddingBottom="@dimen/x8"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:textColor="@color/flash_normal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mActionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="@dimen/x8"
            android:paddingBottom="@dimen/x8"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:layout_centerVertical="true"
            android:background="@drawable/public_red_selector"
            android:clickable="false"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:text="支付尾款￥188.00"/>

    </LinearLayout>

</LinearLayout>