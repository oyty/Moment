<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x600"
    android:layout_height="@dimen/x70"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/x5"
    android:paddingRight="@dimen/x10"
    android:background="@drawable/detail_notification_bg"
    android:id="@+id/mNotificationLayout">

    <com.xelement.moment.widget.custom.CircleImageView
        android:id="@+id/mAvatarImg"
        android:layout_width="@dimen/x65"
        android:layout_height="@dimen/x65"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/zhouxingchi" />

    <TextView
        android:id="@+id/mNotificationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>