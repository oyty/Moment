<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mWaitToPayAction"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x140"
    android:orientation="vertical"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/mTypeImg"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x60"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/mTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mTypeImg"
        android:textColor="@color/flash_grey"
        android:textSize="12sp" />

    <View
        android:id="@+id/mFlag"
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/x1"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <com.xelement.moment.widget.custom.BadgeView
        android:id="@+id/mMsgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x4"
        android:layout_toRightOf="@+id/mFlag"
        android:layout_marginLeft="@dimen/x20"
        android:text="12"
        android:visibility="gone"
        android:textSize="10sp"  />

</RelativeLayout>