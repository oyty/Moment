<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginLeft="@dimen/x20"
        android:textColor="@color/flash_normal"
        android:text="2019.01.05"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mTimeLabel"
        android:layout_marginTop="@dimen/x20">

        <ImageView
            android:id="@+id/mProductImg"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x150"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x10"
            android:src="@mipmap/cart" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@+id/mProductImg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="无边落木萧萧下，不尽长江滚滚来，万里悲秋常作客，百年多病独登台"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/mDaysLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginRight="@dimen/x20"
                android:paddingTop="@dimen/x10"
                android:paddingBottom="@dimen/x5"
                android:text="收货日期：90天"
                android:textColor="@color/flash_normal"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>