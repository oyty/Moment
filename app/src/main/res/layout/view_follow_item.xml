<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mProductImg"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x150"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/x20"
        android:scaleType="centerCrop"
        android:src="@mipmap/cart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_toRightOf="@+id/mProductImg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x40"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="无边落木萧萧下，不尽长江滚滚来，万里悲秋常作客，百年多病独登台"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/mSkuLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x20"
            android:background="#F9F9F9"
            android:paddingLeft="@dimen/x20"
            android:paddingTop="@dimen/x5"
            android:paddingBottom="@dimen/x5"
            android:text="黄色，1件，15天收货（定金￥12.00）"
            android:textColor="@color/flash_normal"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x30"
            android:layout_marginBottom="@dimen/x30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥12.00"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mMallPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:text="￥12.00"
                android:textColor="@color/flash_normal"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>