<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/flash_light"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mTimeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginBottom="@dimen/x20"
        android:gravity="center_horizontal"
        android:text="2分钟前"
        android:textColor="@color/flash_normal"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:paddingBottom="@dimen/x20"
        android:background="@drawable/public_round_pure_white">

        <ImageView
            android:id="@+id/mProductImg"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:src="@mipmap/zhouxingchi"
            android:layout_margin="@dimen/x20"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/x20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="您进行时光购买的【千岁好油茶籽油食用油 压榨一级有机 500ml*2瓶】已经完成生产！ "/>

            <TextView
                android:id="@+id/mDesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF302E"
                android:textSize="13sp"
                android:layout_marginTop="@dimen/x6"
                android:text="请关注该商品物流详情保证顺利收货"/>

            <LinearLayout
                android:id="@+id/mCheckDetailAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginRight="@dimen/x20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="查看详情"/>

                <ImageView
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:src="@mipmap/arrow_right"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>