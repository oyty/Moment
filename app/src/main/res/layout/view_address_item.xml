<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x120"
    android:orientation="horizontal"
    android:background="@color/white">

    <ImageView
        android:id="@+id/mStateImg"
        android:layout_width="@dimen/x38"
        android:layout_height="@dimen/x38"
        android:layout_marginLeft="@dimen/x25"
        android:layout_centerVertical="true"
        android:src="@mipmap/location"/>

    <FrameLayout
        android:id="@+id/mEditAction"
        android:layout_width="@dimen/x110"
        android:layout_height="@dimen/x110"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_gravity="center"
            android:src="@mipmap/edit"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/mBaseAction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/mStateImg"
        android:layout_toLeftOf="@+id/mEditAction"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x25"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/mNicknameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/flash_black"
                android:maxWidth="@dimen/x350"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mMobileLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:textColor="@color/flash_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mDefaultView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:paddingTop="@dimen/x5"
                android:paddingBottom="@dimen/x5"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15"
                android:enabled="false"
                android:text="默认"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/mDetailAddressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/flash_normal"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>